<div class="text-success">
  <%= flash[:notice] %>
</div>
<div class="text-danger">
  <%= flash[:alert] %>
</div>
<div class=error_box>
  <%= render "shared/error" %>
</div>

<h2>新しい予定</h2>

<%= form_tag ("/schedules") do %>
  <table>
    <tr>
      <th>
        <a>タイトル</a>
      </th>
      <td>
        <textarea name="title"></textarea>
      </td>
    </tr>

    <tr>
      <th>
        <a>開始日</a>
      </th>
      <td>
        <input type="date" name="start" value="" />
      </td>
    </tr>

    <tr>
      <th>
        <a>終了日</a>
      </th>
      <td>
        <input type="date" name="finish" value="" />
      </td>
    </tr>
    <tr>
      <th>
        <a>終日</a>
      </th>
      <td>
        <input name="all_day" type="hidden" value="0">
        <input type="checkbox" name="all_day" value="1" >
      </td>
    </tr>
    <tr>
      <th>
        <a>メモ</a>
      </th>
      <td>
        <textarea name="memo"></textarea>
      </td>
    </tr>
  </table>
  <input type="submit" value="登録">
<% end %>
